{
  "name": "blog-frontend",
  "version": "1.0.0",
  "description": "a simple blog",
  "main": "index.js",
  "scripts": {
    "build-css": "node-sass-chokidar ./resources -o resources/ --recursive",
    "watch-css": "npm run build-css && node-sass-chokidar ./resources -o resources/ --watch --recursive",
    "watch-node": "nodemon -e html,js,json",
    "start": "node index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "npm-run-all -p watch-node watch-css"
  },
  "keywords": [
    "blog"
  ],
  "author": "Bruno casotto",
  "license": "ISC",
  "dependencies": {
    "hapi": "^17.5.2",
    "inert": "^5.1.0",
    "node-sass-chokidar": "^1.3.3",
    "npm-run-all": "^4.1.3",
    "nunjucks-hapi": "^2.1.0",
    "vision": "^5.3.3"
  }
}
